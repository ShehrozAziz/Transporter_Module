<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Hidden buttons layout (which will be revealed) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnMoreInfo2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:backgroundTint="@color/BG"
        android:clickable="true"
        android:visibility="gone"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:background="@drawable/ic_more_vert"
                android:clickable="false"
                app:backgroundTint="@color/FG" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:paddingHorizontal="10dp"
                android:text="More"
                android:textColor="@color/FG"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/BG"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"
        android:layout_marginVertical="2dp"
        android:id="@+id/mcvtextualarea"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingEnd="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/FG"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvSwipeIndicator"
                android:textSize="14sp"
                android:id="@+id/tvUserName"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/FG"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/tvDistance"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Away from You"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/FG"
                app:layout_constraintTop_toBottomOf="@id/tvDistance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvOrderType"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/tvAwayText"
                />
            <Button
                android:id="@+id/tvSwipeIndicator"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="Swipe ⬆️"
                android:gravity="center"
                android:textColor="@color/FG"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:textSize="9sp"
                android:clickable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:rotation="90"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fare"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/FG"

                app:layout_constraintTop_toBottomOf="@id/tvUserName"
                app:layout_constraintStart_toEndOf="@id/tvSwipeIndicator"
                android:textSize="14sp"
                android:id="@+id/tvFare"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transport Order"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/FG"
                app:layout_constraintTop_toBottomOf="@id/tvFare"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="14sp"
                android:id="@+id/tvOrderType"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0302-1234567"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/FG"
                app:layout_constraintTop_toBottomOf="@id/tvFare"
                app:layout_constraintStart_toEndOf="@id/tvSwipeIndicator"
                android:textSize="14sp"
                android:id="@+id/tvPhone"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnMoreInfo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:backgroundTint="@color/BG"
        android:clickable="true"
        android:visibility="gone"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:background="@drawable/ic_more_info"
                android:clickable="false"
                app:backgroundTint="@color/FG" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:paddingHorizontal="10dp"
                android:text="More Info"
                android:textColor="@color/FG"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>